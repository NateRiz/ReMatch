* {
  font-size: 20px;
  font-family: "Comic Sans MS"
}

body, html {
  margin: 0;
  padding: 0;
  height: 100%;
  overflow: hidden;
  background-color: black;
}

.Navbar {
    padding-left: 0px;
    padding-right: 0px;
    margin-left: 0px;
    margin-right: 0px;
    background-color: #2c7da0;
    height: 6%;
    margin: 0px;
}

.NickNameContainer{
  text-align: right;
}

.NickNameInput{
  background-color: transparent;
  color: white;
  margin-right: 8px;
  margin-top: 8px;
  border-radius: 16px;
  border-width: 2px;
  border-style: solid;
  border-color: #012a4a;
  text-align: center;
}

.CanvasContainer {
    background-color: #012a4a;
    height: 88%;
    width: 100%;
    margin: 0px;
}

.BottomContainer {
  background-color: #2c7da0;
  height: 6%;
}

.Bottom {
  padding-left: 0px;
  padding-right: 0px;
  margin-left: 0px;
  margin-right: 0px;
  height: 100%;
  width: 100%;
  margin: 0px;
  display: flex;
  text-align: center;
}

.BottomRight {
  text-align: right;
}

.Button {
  color: white;
  border-radius: 32px;
  border: none;
  margin: 8px;
  padding: 10px 20px;
  text-align: center;
  transition-duration: .2s;
}

.Button:hover {
  cursor: pointer;
}

.Button:active {
  transform: translateY(4px);
}

.ButtonContainer {
  width: 50%;
  flex-grow: 1;
  align-items: center;
  justify-content: right;
}

.ButtonPlay {
  background-color: #26aa36;
}

.ButtonPlay:hover {
  background-color: #239B31;
}

.ButtonPlay:disabled {
  background-color: gray;
  cursor: initial;
}

.ButtonRed {
  background-color: #B72A2A;
}

.ButtonRed:hover {
  background-color: #aa2626;
}

.IdInput {
  color: black;
  margin-left: 16px;
  border-radius: 16px;
  border-width: 2px;
  border-style: solid;
  border-color: #012a4a;
  text-align: center;
}

.IdInputPrompt {
  color: white
}

.HiddenInput {
  opacity:0;
  filter:alpha(opacity=0);
  height: 0px;
  width: 0px;
}

.Hidden{
  display: none;
}